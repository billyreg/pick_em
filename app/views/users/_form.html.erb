<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_name_class = "form-control" %>
    <% user_name_was_invalid = user.errors.include?(:user_name) %>

    <% if was_validated %>
      <% if user_name_was_invalid %>
        <% user_name_class << " is-invalid" %>
      <% else %>
        <% user_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_name %>
    <%= f.text_field :user_name, class: user_name_class, placeholder: "Enter user name" %>
    <% if user_name_was_invalid %>
      <% user.errors.full_messages_for(:user_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_type_class = "form-control" %>
    <% user_type_was_invalid = user.errors.include?(:user_type) %>

    <% if was_validated %>
      <% if user_type_was_invalid %>
        <% user_type_class << " is-invalid" %>
      <% else %>
        <% user_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_type %>
    <%= f.select :user_type, options_for_select(User.user_types.keys), {}, class: "form-control" %>
    <% if user_type_was_invalid %>
      <% user.errors.full_messages_for(:user_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
