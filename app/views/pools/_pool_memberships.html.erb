<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Memberships

    <a data-toggle="collapse" href="#pool_memberships_new_form">
      Add membership
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @pool.memberships.each do |membership| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to membership, membership %>

        <% if current_user == membership.user %>
          <%= link_to membership, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="pool_memberships_new_form">
        <%= render partial: "pools/pool_memberships_new_form" %>
      </div>
    </div>

  </ul>
</div>
