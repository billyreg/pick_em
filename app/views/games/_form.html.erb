<% was_validated = game.errors.any? %>

<%= form_with(model: game, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for favorite start -->
  <div class="form-group">
    <% favorite_class = "form-control" %>
    <% favorite_was_invalid = game.errors.include?(:favorite) %>

    <% if was_validated %>
      <% if favorite_was_invalid %>
        <% favorite_class << " is-invalid" %>
      <% else %>
        <% favorite_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :favorite %>
    <!-- Input for favorite start -->
    <%= f.text_field :favorite, class: favorite_class, placeholder: "Enter favorite" %>
    <!-- Input for favorite end -->
    <% if favorite_was_invalid %>
      <% game.errors.full_messages_for(:favorite).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for favorite end -->
  <!-- Label and input for underdog start -->
  <div class="form-group">
    <% underdog_class = "form-control" %>
    <% underdog_was_invalid = game.errors.include?(:underdog) %>

    <% if was_validated %>
      <% if underdog_was_invalid %>
        <% underdog_class << " is-invalid" %>
      <% else %>
        <% underdog_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :underdog %>
    <!-- Input for underdog start -->
    <%= f.text_field :underdog, class: underdog_class, placeholder: "Enter underdog" %>
    <!-- Input for underdog end -->
    <% if underdog_was_invalid %>
      <% game.errors.full_messages_for(:underdog).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for underdog end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = game.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <!-- Input for description end -->
    <% if description_was_invalid %>
      <% game.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for description end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
