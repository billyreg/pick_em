<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Picks

    <a data-toggle="collapse" href="#game_picks_new_form">
      Add pick
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @game.picks.each do |pick| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to pick, pick %>

        <% if current_user == pick.user %>
          <%= link_to pick, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="game_picks_new_form">
        <%= render partial: "games/game_picks_new_form" %>
      </div>
    </div>

  </ul>
</div>
